
  {{#each sortedGames as |game|}}
    {{#link-to 'game' game.id}}<h2>{{game.name}}</h2>{{/link-to}}
    <h3>Realeased: {{game.released}}</h3>
    {{#link-to 'game' game.id}}<img src={{game.image}}>{{/link-to}}
    <h2 class="font-color">Editor's Ratings: {{game.editorRating}}</h2>
    <button {{action 'addToFavorites' game}}>Add to Favorites</button>
  {{/each}}
